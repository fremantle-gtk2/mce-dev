#!/usr/bin/make -f
# debian/rules for mce-dev using debhelper.
# Copyright Â© 2004-2009 Nokia Corporation.  All rights reserved.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

pkgdir = $(CURDIR)/debian/tmp

pcfileversion := $$(grep -m1 '^Version' mce.pc | sed -e 's/Version: *//')
changelogversion := $$(grep -m1 'mce-dev (' debian/changelog | sed -e 's/mce-dev (\(.*\)).*/\1/;s/\(^'$(pcfileversion)'\).*/\1/')

.PHONY: clean
clean:
	dh_testdir
	dh_testroot

	$(MAKE) distclean

	dh_clean

.PHONY: check
check:
	@if [ x"$(pcfileversion)" != x"$(changelogversion)" ]; then \
		printf "error: version-number mismatch\n"; \
		printf "changelog version: $(changelogversion)\n"; \
		printf ".pc-file version: $(pcfileversion)\n"; \
		exit 1; \
	fi

.PHONY: build
build: check
	dh_testdir

	$(MAKE) doc

.PHONY: install
install:
	$(MAKE) install DESTDIR="$(pkgdir)"

.PHONY: binary-indep
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_install -i
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: binary-arch
binary-arch: build install
# nothing to see here, move along

.PHONY: binary
binary: binary-indep binary-arch
